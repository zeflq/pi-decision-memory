{
  "name": "pi-decision-memory",
  "version": "0.5.0",
  "private": true,
  "type": "module",
  "description": "Pi extension for durable per-project decision memory",
  "pi": {
    "extensions": [
      "./extensions"
    ]
  },
  "scripts": {
    "test": "vitest --run",
    "test:decision-memory": "vitest --run tests/decision-memory-*.test.ts",
    "check": "npm run test:decision-memory && tsc --noEmit",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0",
    "release": "npm run check && standard-version",
    "release:minor": "npm run check && standard-version --release-as minor",
    "release:patch": "npm run check && standard-version --release-as patch"
  },
  "dependencies": {
    "@mariozechner/pi-coding-agent": "^0.55.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "conventional-changelog-cli": "^5.0.0",
    "standard-version": "^9.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
